<div class="container" style="background-color: rgb(201, 1, 1);">
        <div class="row">
            <div class="col-md-12">
                <h2>Editos de Usuarios</h2>
            </div>
        </div>
        <form action="http://localhost:4000/usuario/editarUsuario/{{{data.id_usu}}}" method="post">
            <div class="row mt-2">
                <div class="col-md-6">
                    <label for="">Nombre</label>
                    <input type="text" name="nombre" id="" value="{{{data.nombre}}}" class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="">Apellido</label>
                    <input type="text" name="apellido" id="" value="{{{data.apellido}}}" class="form-control">
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <label for="">Usuario</label>
                    <input type="text" name="user" id="" value="{{{data.user}}}" class="form-control">
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <label for="">Estado</label>
                    <input type="text" name="activo" id="" value="{{{data.activo}}}" class="form-control">
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <button type="submit" class="btn  w-100" style="background-color: rgb(178, 1, 201);">Editar</button>
                </div>
                <div class="col-md-6">
                    <button type="reset" class="btn  w-100" style="background-color: rgb(124, 1, 201);">Limpiar</button>
                </div>
            </div>
        </form>
    </div>